{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ymh.operasyon",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Proje konumunu harita üzerinde işaretlemek için konumunuza ihtiyacımız var.",
        "NSCameraUsageDescription": "İrsaliye ve fiş fotoğraflarını çekmek için kameranıza ihtiyacımız var.",
        "NSPhotoLibraryUsageDescription": "Galeriden fotoğraf seçmek için izniniz gerekiyor."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}